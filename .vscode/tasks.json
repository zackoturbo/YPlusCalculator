        {
            "type": "cppbuild",
            "label": "C/C++: gcc-11 build active file",
            "command": "/opt/homebrew/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++11",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /opt/homebrew/bin/gcc-11"
        }
    ],
    "version": "2.0.0"
}